def search_users(request):
    """Search users by query"""
    query = request.GET.get('q', '')
    # BUG: XSS vulnerability - unsanitized output
    # BUG: No pagination - can cause DoS with large result sets
    users = User.objects.filter(username__icontains=query)
    # BUG: Returning raw HTML without escaping
    html = f"<h1>Search results for: {query}</h1><ul>"
    for user in users:
        html += f"<li>{user.username} - {user.email}</li>"
    html += "</ul>"
    return HttpResponse(html)


